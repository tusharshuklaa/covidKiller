{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES2019"
    ],
    "sourceMap": true,
    // "outFile": "./game.js",
    "outDir": "./dist/",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/phaser/types"
    ],
    "types": [
        "Phaser"
    ]
  }
}
